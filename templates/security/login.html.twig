{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="col-4" id="lft-col">
        <div style="position:relative">
            <img src="{{ asset('assets/img/logo.png') }}" alt="logo" id="logo">
        </div>
    </div>
    <div class="col-5" id="form-ctr">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal"><p>{{ 'login.form.title.label'|trans }}</p></h1>
            <label for="inputEmail" class="sr-only"><p>{{ 'login.form.email.label'|trans }}</p></label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="{{ 'login.form.email.label'|trans }}" required autofocus>
            <label for="inputPassword" class="sr-only"><p>{{ 'login.form.password.label'|trans }}</p></label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'login.form.password.label'|trans }}" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-secondary" type="submit">
                {{ 'login.form.btn.label'|trans }}
            </button>
            <a class="btn btn-lg btn-secondary" href="{{ path('app_register') }}" role="button">{{ 'login.form.btn.register'|trans }}</a>
        </form>
    </div>
    <div class="col-3">
    </div>
{% endblock %}
