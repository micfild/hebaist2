<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Hebaist!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        <link rel="stylesheet" href="{{ asset('build/bootstrap.css') }}">
    {% endblock %}

</head>
<body>
<div class="container-fluid">
    <div class="row" id="top-rw">
        <div class="col-md-10">
        </div>
        <div class="col-md-2">
            {% if app.user %}
                <a class="btn btn-lg btn-secondary " href="{{ path('app_logout') }}" role="button">{{ 'btn.logout'|trans }}</a>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-10">
            <div class="row" id="background">
                {% block body %}{% endblock %}
            </div>
        </div>
        <div class="col-md-1">
        </div>
    </div>


</div>
{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
    <script src="{{ asset('build/bootstrap-js.js') }}"></script>
{% endblock %}

</body>
</html>
